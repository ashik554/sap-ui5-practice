<mvc:View xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form" controllerName="chip.controller.MyXML" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
    <form:SimpleForm editable="true">
        <form:title>
            <core:Title icon="sap-icon://customer" text="Employee detail" />

        </form:title>
        <form:content>
            <Label text="Emp Id" />
            <Input id="idEmpId" width="20%" value="{/empStr/empId}"  enabled="{/empStr/hunk}"/>
            <Label text="Emp Name" />
            <Input id="idEmpName" width="40%" value="{path:'/empStr/empName'}" enabled="{/empStr/hunk}"  />
            <Label text="Salary" />
            <Input id="idEmpSal" width="30%" enabled="{/empStr/hunk}"/>
            <Label text="Currency" />
            <Input id="idCurr" width="15%" enabled="{/empStr/hunk}" />
            <Label />
            <Button text="on reload " press="onReload"></Button>
        </form:content>


    </form:SimpleForm>

    <!-- <Input id="idInp"/>
<Button  id="idBtn" press="onBtnClick" text="Click Me" icon="sap-icon://home"/> -->
</mvc:View>